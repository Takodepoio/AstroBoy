---
import "../styles/global.css";

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

		<title>Astro Basics</title>
	</head>
	<body>
		<div class="gradientHeader">
			
			<img class="Glogo" src="/images/Brand.png" alt="AsMediaIcon">
			 <button id="open-panel">
				<img class="OpMenu" src="/Icons/Nav/OpenMenu.svg" alt="abrirMenu">
			</button>
			
			
		</div>
		<div id="panelMenu" class="panel cerrado">
			<div class="header-panel">
				<img class="logitoPanel" src="/images/Brand.png" alt="logito">
				<button id="close-panel">
					<img class="close" src="/Icons/Nav/CloseMenu.svg" alt="close">
				</button>
				
			</div>
			<ul class="interes-sect">
				<li class="about-p">Acerca De</li>
				<li class="admition-p">Admisión 2025</li>
			</ul>
			<ul class="carreras-sect">
				<li class="tv-p">Televisión</li>
				<li class="dp-p">Diseño</li>
				<li class="ci-p">imagen</li>
			</ul>
			<ul class="contacto-sect">
				<li class="contact-p">contacto</li>
			</ul>
		</div>
		<slot />
	</body>
</html>

<style>
	*{
		margin: 0;
		padding:0;
		box-sizing: border-box;
	}
	html,body {
		line-height: 1.2;

	}
	.Glogo{
		width: 36px;
		height: 34.91px;
		position: absolute;
		top: 15px;
		left: 15px;
	}

	.OpMenu{
		position: absolute;
		top: 20px;
		right: 15px;
	}
	.gradientHeader{
		background: linear-gradient(black,transparent );
		height: 64px;
		position: relative;

	}
	.panel{
		position: fixed;
    	top: 0;
    	right: 0;
    	height: 100vh;
    	width: 260px;
    	background-color: #1a1a1a;
    	color: #e2f9d2;
    	font-weight: 200;
   	 	font-size: 16px;
    	padding: 10px;
    	border-radius: 12px 0 0 12px;
    	transform: translateX(100%);
    	transition: transform 0.3s ease;
    	z-index: 9999;
	}
	.interes-sect{
		border-color:rgba(255, 255, 255, 0.102);
		border-width: .5px;
		border-left: none;
		border-right: none;
		line-height: 26px;
		padding:20px;
	}
	.carreras-sect{
		border-color:rgba(255, 255, 255, 0.102);
		border-width: .5px;
		border-left: none;
		border-right: none;
		border-top: none;
		padding:20px;
		line-height: 26px;
	}
	.contacto-sect{
		border-color:rgba(255, 255, 255, 0.102);
		border-width: .5px;
		border-left: none;
		border-right: none;
		border-top: none;
		padding:20px;
		line-height: 26px;
	}
	.logitoPanel{
		width: 36px;
		height: 34.91px;
	}
	.close{
		position: relative;
		left: 220px;
		top: -28px;
	}
	
	.panel li{
		position: relative;
		padding-left: 5px;
		list-style: none;
		margin: 10px;
	}
	.about-p::before{
		background-image: url('/Icons/Nav/About.png');
	}
	.admition-p::before{
		background-image: url('/Icons/Nav/Admision.png');
	}
	.tv-p::before{
		background-image: url('/Icons/Nav/Televisión.png');
	}
	.dp-p::before{
		background-image: url('/Icons/Nav/Diseño.png');
	}
	.ci-p::before{
		background-image: url('/Icons/Nav/Consultoria.png');
	}
	.contact-p::before{
		background-image: url('/Icons/Nav/Contact.png');
	}
	.panel li::before{
		content: "";
		position: absolute;
		left: -24px;
		top: 0;
		width: 24px;
		height: 24px;
		background-size: contain;
		background-repeat: no-repeat;
	}

	.panel.abierto {
 		transform: translateX(0);
	}

</style>
<script type="module">
	const open = document.getElementById('open-panel');
	const close = document.getElementById('close-panel');
	const panel = document.getElementById('panelMenu');

	 open.addEventListener('click', () => {
    panel.classList.remove('cerrado');
    panel.classList.add('abierto');
  });

  close.addEventListener('click', () => {
    panel.classList.remove('abierto');
    panel.classList.add('cerrado');
  });
</script>
